<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromDegrees="0"
        android:toDegrees="360">

    <shape
        android:shape="ring"
        android:innerRadiusRatio="3"
        android:thicknessRatio="20"
        android:useLevel="false">

        <size
            android:width="@dimen/loading_1_progress_size"
            android:height="@dimen/loading_1_progress_size" />

        <gradient
            android:type="sweep"
            android:useLevel="false"
            android:startColor="@color/loading_1_progress_start_color"
            android:endColor="@color/loading_1_progress_end_color"
            android:angle="0"/>

    </shape>

</rotate>